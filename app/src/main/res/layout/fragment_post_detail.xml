<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="View"
            type="android.view.View" />
        <variable
            name="postModel"
            type="org.kjh.mypracticeprojects.model.PostModel" />
        <variable
            name="viewModel"
            type="org.kjh.mypracticeprojects.ui.main.post.PostDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.PostDetailFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_post_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@{postModel.place_name}"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_postDetailList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tb_post_detail_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
